<div id="signupbox" class="mainbox col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2">
  <div class="panel panel-info">
    <div class="panel-heading">
      <div class="panel-title">নাগরিক ফরম</div>
    </div>
    <div class="panel-body">
      <%= form_for @citizen, html: {class: 'form-horizontal'} do |f| %>

          <% if @citizen.errors.any? %>
              <div id="signupalert" class="alert alert-danger">
                <h2><%= pluralize(@citizen.errors.count, "error") %> prohibited this user from being saved:</h2>
                <ul>
                  <% @citizen.errors.full_messages.each do |msg| %>
                      <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
          <% end %>

          <%= f.fields_for :basic_infos do |bi| %>
              <%= render partial: 'layouts/basic_information', locals: {f: bi} %>
          <% end %>

          <div class="form-group">
            <label for="nameInBn" class="col-md-3 control-label">লিঙ্গঃ</label>
            <div class="col-md-9">
              <%= f.select :gender, Citizen.GENDERS.map { |c| [c[0], c[1]] }, {}, {class: "form-control"} %>
            </div>
          </div>

          <%= f.hidden_field :union_id, :value => current_user.union.id %>
          <span class=" text-center help-block">নাগরিকত্ব নম্বর অথবা জন্ম নিবন্ধন নম্বর যেকোন একটি দিলে হবে</span>
          <div class="form-group">
            <label for="nameInBn" class="col-md-3 control-label">জাতীয় পরিচয়পত্র নম্বরঃ</label>
            <div class="col-md-9">
              <%= f.text_field :nid, class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <label for="nameInBn" class="col-md-3 control-label">জন্ম নিবন্ধন নম্বরঃ</label>
            <div class="col-md-9">
              <%= f.text_field :birthid, class: "form-control" %>
            </div>
          </div>

          <%= f.fields_for :addresses do |ad| %>
              <%= render partial: 'layouts/address', locals: {f: ad} %>
          <% end %>

          <%= f.fields_for :contact_address do |ca| %>
              <%= render partial: 'layouts/contact_address', locals: {f: ca} %>
          <% end %>


          <div class="form-group">
            <label for="nameInBn" class="col-md-3 control-label">Status</label>
            <div class="col-md-9">
              <%= f.collection_select :status, Citizen.STATUS, :to_s, :to_s, {}, {class: "form-control"} %>
            </div>
          </div>

          <div class="form-group">
            <!-- Button -->
            <div class="col-md-offset-3 col-md-9">
              <%= f.submit "Save", class: "btn btn-info" %>
            </div>
          </div>
      <% end %>
      <%= link_to 'Back', citizens_path %>
    </div>
  </div>
</div>
