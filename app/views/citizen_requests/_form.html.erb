<div id="signupbox" class="mainbox col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2">
  <div class="panel panel-info">
    <div class="panel-heading">
      <div class="panel-title">নাগরিক ফরম</div>
    </div>
    <div class="panel-body">
      <%= form_for @citizen, html:{class: 'form-horizontal',method: :post},url: citizen_requests_path do |f| %>

          <% if @citizen.errors.any? %>
              <div id="signupalert"  class="alert alert-danger" >
                <h2><%= pluralize(@citizen.errors.count, "error") %> prohibited this user from being saved:</h2>
                <ul>
                  <% @citizen.errors.full_messages.each do |msg| %>
                      <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
          <% end %>


          <div class="form-group">
            <label for="nameInEng" class="col-md-3 control-label">Name(English)*</label>
            <div class="col-md-9">
              <%= f.text_field :name_in_eng, class: "form-control", placeholder: "Name In English" %>
            </div>
          </div>

          <div class="form-group">
            <label for="nameInBn" class="col-md-3 control-label">বাংলা নামঃ</label>
            <div class="col-md-9">
              <%= f.text_field :name_in_bng, class: "form-control", placeholder: "Name In Bangla" %>
            </div>
          </div>

          <div class="form-group">
            <label for="nameInBn" class="col-md-3 control-label">বাবার নামঃ</label>
            <div class="col-md-9">
              <%= f.text_field :fathers_name, class: "form-control",placeholder: "In Bangla"  %>
            </div>
          </div>

          <div class="form-group">
            <label for="nameInBn" class="col-md-3 control-label">মায়ের নামঃ</label>
            <div class="col-md-9">
              <%= f.text_field :mothers_name, class: "form-control",placeholder: "In Bangla" %>
            </div>
          </div>

          <div class="form-group">
            <label for="nameInBn" class="col-md-3 control-label">স্বামী/স্ত্রী নামঃ</label>
            <div class="col-md-9">
              <%= f.text_field :spouse_name, class: "form-control",placeholder: "In Bangla" %>
            </div>
          </div>

          <div class="form-group">
            <label for="nameInBn" class="col-md-3 control-label">লিঙ্গঃ</label>
            <div class="col-md-9">

              <%= f.select :gender,Citizen.GENDERS.map {|c| [c[0],c[1]]},{},{class: "form-control"} %>
            </div>
          </div>

          <div class="form-group">
            <label for="nameInBn" class="col-md-3 control-label">গ্রামের নামঃ</label>
            <div class="col-md-9">
              <%= f.text_field :village, class: "form-control",placeholder: "In Bangla" %>
            </div>
          </div>


          <div class="form-group">
            <label for="nameInBn" class="col-md-3 control-label">ডাকঘরঃ</label>
            <div class="col-md-9">
              <%= f.text_field :post, class: "form-control",placeholder: "In Bangla" %>
            </div>
          </div>

          <div class="form-group">
            <label for="nameInBn" class="col-md-3 control-label">ইউনিয়ন</label>
            <div class="col-md-9">
              <%= f.collection_select :union_id, Union.all,:id,:name_in_bng,{},{class: "form-control"}%>
            </div>
          </div>

          <div class="form-group">
            <label for="nameInBn" class="col-md-3 control-label">ওয়ার্ড নংঃ</label>
            <div class="col-md-9">
              <%= f.number_field :word_no, class: "form-control",placeholder: "In English" %>
            </div>
          </div>

          <div class="form-group">
            <label for="nameInBn" class="col-md-3 control-label">জাতীয় পরিচয়পত্র নম্বরঃ</label>
            <div class="col-md-9">
              <%= f.text_field :nid, class: "form-control" %>
            </div>
          </div>


          <div class="form-group">
            <label for="nameInBn" class="col-md-3 control-label">জন্ম নিবন্ধন নম্বরঃ</label>
            <div class="col-md-9">
              <%= f.text_field :birthid, class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <label for="nameInBn" class="col-md-3 control-label">ইমেইল</label>
            <div class="col-md-9">
              <%= f.text_field :email, class: "form-control",placeholder: "Name In English" %>
            </div>
          </div>

          <div class="form-group">
            <label for="nameInBn" class="col-md-3 control-label">মোবাইল নম্বর</label>
            <div class="col-md-9">
              <%= f.text_field :mobile_no, class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <!-- Button -->
            <div class="col-md-offset-3 col-md-9">
              <%= f.submit "Save", class:"btn btn-info" %>
            </div>
          </div>
      <% end %>
      <%= link_to 'Back', root_path %>
    </div>
  </div>
</div>
