<% if @citizens.present? %>
<table class="table table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th>Father's Name</th>
    <th>Mother's Name</th>
    <th>Union</th>
    <th>Status</th>
  </tr>
  </thead>
  <tbody>

  <% @citizens.each do |r| %>
      <tr>
        <td><%= link_to r.name_in_bng,nid_or_birthid_path(r) %></td>
        <td><%= r.fathers_name %></td>
        <td><%= r.mothers_name %></td>
        <td><%= r.union.name_in_bng %></td>
        <td><%= r.status %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<% elsif @citizens %>
    <p>No Citizen found</p>
<% end %>